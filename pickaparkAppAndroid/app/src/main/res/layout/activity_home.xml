<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoHIV"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/findAParkHIV"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/findapark" />

            <ImageView
                android:id="@+id/detailsHIV"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/paymentHIV"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/payment" />

            <ImageView
                android:id="@+id/noticeHIV"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/notice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settingHIV"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/setting" />

            <ImageView
                android:id="@+id/logoutHIV"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logout" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>