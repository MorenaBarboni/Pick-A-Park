<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindAParkSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoHIV"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/logo" />

        <Spinner
            android:id="@+id/spinnerCar"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_marginBottom="10pt"
            android:layout_marginTop="25pt"/>

        <Spinner
            android:id="@+id/spinnerParkPreference"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_marginBottom="10pt" />

        <EditText
            android:id="@+id/startLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="10pt"
            android:inputType="phone"
            android:hint="default: your current position"/>

        <EditText
            android:id="@+id/destinationLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="10pt"
            android:inputType="phone"
            android:hint="destination"/>

        <Button
            android:id="@+id/buttonGoToPark"
            android:background="@drawable/selector_downloaded_file_button"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:layout_weight="1"
            android:text="Go !"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>